{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "next/core-web-vitals"
  ],

  "plugins": [
    "jest"
  ],

  "parserOptions": {
    "project": "./tsconfig.json"
  },

  "ignorePatterns": [
    "jest.config.js"
  ],

  "rules": {
    "import/prefer-default-export": "off",
    "arrow-body-style": "off",
    "class-methods-use-this": "off"
  }
}
